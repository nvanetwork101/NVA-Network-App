{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/firebase-messaging-sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "/index.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/content/**",
        "function": "generateSharePreviewV2"
      },
      {
        "source": "/opportunity/**",
        "function": "generateSharePreviewV2"
      },
      {
        "source": "/user/**",
        "function": "generateSharePreviewV2"
      },
      {
        "source": "/discover",
        "function": "generateSharePreviewV2"
      },
      {
        "source": "/competition/**",
        "function": "generateSharePreviewV2"
      },
      {
        "source": "/promotedStatus/**",
        "function": "generateSharePreviewV2"
      },
      {
        "source": "!/__/**",
        "destination": "/index.html"
      }
    ]
  }
}