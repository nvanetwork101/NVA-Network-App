{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/@(user|competition|opportunity)/**",
        "function": "socialCardRenderer",
        "userAgent": "(bot|crawler|spider|crawling|facebookexternalhit|twitterbot|pinterest|linkedinbot|whatsapp|googlebot|bingbot|yandexbot)"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}