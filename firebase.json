{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/user/**",
        "function": "socialCardRenderer"
      },
      {
        "source": "/competition/**",
        "function": "socialCardRenderer"
      },
      {
        "source": "/opportunity/**",
        "function": "socialCardRenderer"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}